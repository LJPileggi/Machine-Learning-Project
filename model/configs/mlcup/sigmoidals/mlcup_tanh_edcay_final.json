{
	"data_conf":{
		"train_set": "mlcup_internaltrain.csv",
		"test_set": "mlcup_internaltest.csv",
		"output_path": "output/mlcup/",
		"graph_path": "graphs/mlcup/tanh_noscale",
		"input_size": 10,
		"output_size": 2
	},

	
	"global_conf": {
		"task": "regression",
		"validation": "crossval",
		"loss_tolerance": 1e-2,
		"loss_patience": 1,
		"wc_tolerance": 0,
		"wc_patience": 1,
		"max_step": 250,
		"check_step": 30,
		"metrics": {"train": ["mee"],
					"val": 	 ["mee"],
					"test":  ["mee"]
					},
		"gs_preferred_metric": ["val", "mee"],
		"gs_max_variance": 0.01,
		"searched_hyper": ["eta"],
		"maxfold": 4
	},

	"hyperparameters":{
	    "eta": [0.19, 0.17, 0.15, 0.13],
	    "eta_decay": [25, 30, 40, 50],
	    "lam": [1e-5],
	    "alpha": [0.3, 0.5, 0.8],
	    "batch_size": [64],
	    "hidden_units": [
			[["tanh", 15], ["tanh", 15], ["tanh", 15], ["linear", 2]],
			[["tanh", 15], ["tanh", 15], ["tanh", 15],["tanh", 15], ["linear", 2]]
		]
	}
}
