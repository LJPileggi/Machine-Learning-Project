{
	"data_conf":{
		"train_set": "monks-1.train.csv",
		"test_set": "monks-1.test.csv",
    	"output_path": "output/monks1/",
    	"graph_path": "graphs/monks1/",
		"input_size": 17,
		"output_size": 1
	},

	"global_conf": {
		"task": "classification",
	    "epsilon": 1e-4,
	    "max_step": 100,
	    "check_step": 1,
		"metrics": {"train": ["mse", "accuracy"],
					"test":  ["mse", "accuracy"]
					},
		"gs_preferred_metric": ["train", "mse"],
		"searched_hyper": ["eta", "lam", "alpha"],
		"maxfold": 0,
		"patience": 4,
		"wc_threshold": 0
	},

	"hyperparameters":{
		"eta_decay": [-1],
	    "eta": [0.1, 0.5],
	    "lam": [0],
	    "alpha": [0.5],
	    "batch_size": [-1],
	    "hidden_units": [
			[[2, "sigmoidal", 1], [1, "sigmoidal", 1]],
			[[2, "tanh", 1], [1, "tanh", 1]]
		]
	}
}